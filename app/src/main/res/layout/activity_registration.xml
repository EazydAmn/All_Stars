<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration"
    android:background="#150D0B">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_marginBottom="450dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon" />

    <ImageView
        android:layout_width="279dp"
        android:layout_height="27dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="260dp"
        android:src="@drawable/nadpis" />
    <EditText
        android:id="@+id/name"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="302dp"
        android:hint="Имя"
        android:textColorHint="#AFAFAF"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    <EditText
        android:id="@+id/surname"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="362dp"
        android:hint="Фамилия"
        android:textColorHint="#AFAFAF"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    <EditText
        android:id="@+id/email"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:hint="E-mail"
        android:layout_marginTop="422dp"
        android:textColorHint="#AFAFAF"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    <EditText
        android:id="@+id/password"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="482dp"
        android:hint="Пароль"
        android:textColorHint="#AFAFAF"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    <EditText
        android:id="@+id/repassword"
        android:layout_width="324dp"
        android:layout_height="44dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="542dp"
        android:hint="Повторите пароль"
        android:textColorHint="#AFAFAF"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"/>
    <Button
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="24dp"
        android:text="У меня уже есть аккаунт"
        android:onClick="nazad_log"
        />
    <Button
        android:layout_width="328dp"
        android:layout_height="44dp"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="84dp"
        android:text="Зарегистрироваться"
        android:onClick="nazad_reg"
        />
</FrameLayout>